<%- include("../includes/head.ejs")%>
<link rel="stylesheet" href="/public/css/groups.css">

  </head>

  <body>

    <%- include("../includes/navigation.ejs")%>
    
    <main>
      <% if (groups.length > 0) { %>
        <ul>
          <% groups.forEach(group => { %>
            <li><a class="unselectable" href="/groups/<%= group._id %>"><%= group.name %> | <span style="font-size: small;"><%= group.description %> <span style="font-size: large;">|</span> <%= group.code %> (invite code)</span></a></li>
          <% }) %>
        </ul>
      <% } else { %>
        <h2 style="margin: 1rem; color: purple; opacity: .6;">You are not a member of any group at the moment</h2>
      <% } %>
      
    </main>
    <%- include('../includes/end.ejs') %>
