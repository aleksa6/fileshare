<%- include("../includes/head.ejs")%>
<link rel="stylesheet" href="/public/css/forms.css">

  </head>

  <body>

    <%- include("../includes/navigation.ejs")%>
    
    <main>
      <% if (error != null) { %>
        <h3 class="error"><%= error %></h3>
      <% } %>

      <form action="/auth/new-password" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="userId" value="<%= error != null ? oldInput.userId : userId %>">
        <input type="hidden" name="token" value="<%= error != null ? oldInput.token : token %>">
        <input type="password" class="<%= error != null && fields.includes('password') ? 'invalid' : ''%>" value="<%= error != null ? oldInput.password : ''%>" placeholder="New password" name="password">
        <input type="password" class="<%= error != null && fields.includes('passwordConf') ? 'invalid' : ''%>" value="<%= error != null ? oldInput.passwordConf : ''%>" placeholder="Confirm password" name="passwordConf">
        <button type="submit">Change</button>
      </form>

    </main>
    <%- include('../includes/end.ejs') %>